{
  "python.defaultInterpreterPath": "./.venv/bin/python",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["-q"],

  // Editor
  "editor.formatOnSave": true,

  // Ruff linting (replaces deprecated python.linting.*)
  "ruff.lint.enable": true,
  "ruff.lint.run": "onSave",

  // Use Black as default formatter for Python
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // Exclusions
  "files.exclude": {
    "**/.git/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.venv/**": true,
    "**/dist/**": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.venv/**": true,
    "**/dist/**": true
  },

  // Markdown lint tweaks
  "markdownlint.config": {
    "MD013": false,
    "MD047": true,
    "MD010": true
  }
}
