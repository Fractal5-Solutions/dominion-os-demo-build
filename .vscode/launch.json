{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Demo Build",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/demo_build.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Demo Build (build)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/demo_build.py",
            "args": ["build"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Demo Build (run)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/demo_build.py",
            "args": ["run"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Command Core (small)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/demo_build.py",
            "args": ["command-core", "--duration", "120", "--scale", "small"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Autopilot (medium)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/demo_build.py",
            "args": ["autopilot", "--scale", "medium", "--duration", "120"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Pytest Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-v", "--tb=short"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Pytest All",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-v", "--tb=short"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
